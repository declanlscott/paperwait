{
  "extends": "astro/tsconfigs/strict",
  "exclude": ["node_modules", "dist", ".sst", ".drizzle"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "~/app/*": ["src/app/*"],
      "~/components/*": ["src/components/*"],
      "~/images/*": ["src/images/*"],
      "~/layouts/*": ["src/layouts/*"],
      "~/lib/*": ["src/lib/*"],
      "~/styles/*": ["src/styles/*"],
      "~/utils/*": ["src/utils/*"]
    }
  }
}
