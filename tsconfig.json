{
  "extends": "astro/tsconfigs/strict",
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": "./src",
    "paths": {
      "~/app/*": ["app/*"],
      "~/components/*": ["components/*"],
      "~/layouts/*": ["layouts/*"],
      "~/lib/*": ["lib/*"],
      "~/styles/*": ["styles/*"]
    }
  }
}
