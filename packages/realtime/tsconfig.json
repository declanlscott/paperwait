{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "react-jsx",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@paperwait/core/*": ["../core/src/*"]
    }
  }
}
