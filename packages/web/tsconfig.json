{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "~/api/*": ["src/pages/_api/*"],
      "~/app/*": ["src/pages/_app/*"],
      "~/components/*": ["src/components/*"],
      "~/layouts/*": ["src/layouts/*"],
      "~/pages/*": ["src/pages/*"],
      "~/shared/*": ["src/shared/*"],
      "~/types/*": ["src/types/*"]
    }
  }
}
