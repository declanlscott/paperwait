---
import { App } from "~/app/index";
import PlaceholderImage from "~/components/placeholder-image.astro";
import Layout from "~/layouts/app.astro";
import { ClientResource } from "~/lib/client-resource";

import type { AppProps } from "~/app/index";

export const prerender = false;

const appProps = {
  ...Astro.locals,
  clientResource: ClientResource,
} satisfies AppProps;
---

<Layout>
  <App client:only="react" {...appProps}>
    <PlaceholderImage slot="placeholderImg" />
  </App>
</Layout>
